{%  extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{%  block body %}
    <div class="container">
        {{ form_start(form) }}
        {{ form_row(form.username, {'attr': {'placeholder': 'Your name'}}) }}
        {{ form_row(form.password, {'attr': {'placeholder': 'Password'}}) }}
        {{ form_row(form.confirm_password, {'attr': {'placeholder': 'Repeat your password'}}) }}
        {{ form_row(form.roles) }}
        <button type="submit" class="btn btn-success">Register</button>
        {{ form_end(form) }}
    </div>
{% endblock %}